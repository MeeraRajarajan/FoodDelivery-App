<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="329dp"
        android:layout_height="181dp"
        app:srcCompat="@drawable/logo_removebg_preview"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="78dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/internetimage"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/internet"
        tools:ignore="ExtraText,MissingConstraints,NotSibling,UnknownId"
        tools:layout_editor_absoluteX="447dp"
        tools:layout_editor_absoluteY="71dp" />

    <TextView
        android:id="@+id/internetchk"
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:layout_below="@+id/internetimage"
        android:text="Check your Internet Connection"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="367dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnGuest"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Continue as Guest"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGuest"
        android:layout_marginTop="-98dp"
        android:backgroundTint="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="SignUp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609" />


</androidx.constraintlayout.widget.ConstraintLayout>